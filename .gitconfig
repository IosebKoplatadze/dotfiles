[user]
	name = Ioseb Koplatadze
[commit]
	gpgSign = true
[url "git@github.com:"]
	insteadof = https://github.com/
[gpg]
	format = ssh
[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = false
    side-by-side = true
    line-numbers = true
    syntax-theme = Catppuccin-mocha

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
